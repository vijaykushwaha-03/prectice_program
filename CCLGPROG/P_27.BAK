#include<stdio.h>
#include<conio.h>

void main()
{
	int ans,a,b;
	char op;

	clrscr();

	printf("\n\n\n\t Enter two number =>");
	scanf("%d,%d",&a,&b);

	printf("\n\n\t Enter any Opertaot [+,-,/,*] =>");
	scanf(" %c",&op);

	if(op == '+')
	{
		ans = a+b;
		printf("\n\n\t %d + %d = %d",a,b,ans);
	}
	else if(op == '-')
	{
		ans = a-b;
		printf("\n\n\t %d - %d = %d",a,b,ans);
	}
	else if(op == '/')
	{
		ans = a/b;
		printf("\n\n\t %d / %d = %d",a,b,ans);
	}
	else if(op == '*')
	{
		ans = a*b;
		printf("\n\n\t %d * %d = %d",a,b,ans);
	}
	else
	{
		printf("\n\n\t Invalid Operator ");
	}
	getch();
}
